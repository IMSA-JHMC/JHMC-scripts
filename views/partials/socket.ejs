<script src="/socket.io/socket.io.js"></script>
<script>
  var socket = io();

  socket.on("message", message => {
    console.log("message came!");
    console.log(message);
    if (message.type == "alerts") {
      $(".alert-area").html(message.html)
    } else if (message.type == "reload") {
      try {
        forceReload();
      } catch (e) {
        window.location.reload();
      }
    }
  });
</script>