<script>
  $(window).on('load resize', () => {
    // Width with whitespace
    var width = $('.partners').first().width() - 120;

    // Added x-component and square translate
    $(".logo").map((i, a) => {
      $(a).css('height', 'calc(' + width + 'px / 16)');
    })

    $(".partner").map((i, a) => {
      $(a).css('margin', 'calc(' + width + 'px / 128 + 8px)');
    })

    $(".pad-right-logo").map((i, a) => {
      $(a).css('padding-right', 'calc(' + width + 'px / 16)');
    })

    $(".spacer").map((i, a) => {
      $(a).css('font-size', 'calc(' + width + 'px * 5 / 64)');
      $(a).css('margin-bottom', 'calc(' + width + 'px / 64)');
    })
  });
</script>


